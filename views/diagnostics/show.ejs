<%- include('../layout') %>

<main class="container">
  <section class="tool-card">

    <h1>Diagnostic Detail</h1>
    <p class="subtitle">
      For tool: <strong><%= tool.name %></strong>
    </p>

    <div class="detail-row">
      <span class="detail-label">Attack Type</span>
      <span><%= diagnostic.attackType %></span>
    </div>

    <div class="detail-row">
      <span class="detail-label">Severity</span>
      <span class="severity-<%= diagnostic.severity.toLowerCase() %>">
        <%= diagnostic.severity %>
      </span>
    </div>

    <div class="detail-row">
      <span class="detail-label">Notes</span>
      <span><%= diagnostic.note || 'â€”' %></span>
    </div>

    <div class="detail-row">
      <span class="detail-label">Resolved</span>
      <span>
        <%= diagnostic.resolved ? 'Yes' : 'No' %>
      </span>
    </div>

    <div class="form-actions">
      <a
        href="/diagnostics/<%= tool._id %>/<%= diagnostic._id %>/edit"
        class="btn-secondary"
      >
        Edit
      </a>

      <form
        action="/diagnostics/<%= tool._id %>/<%= diagnostic._id %>?_method=DELETE"
        method="POST"
        onsubmit="return confirm('Delete this diagnostic?');"
      >
        <button type="submit" class="btn-danger">
          Delete
        </button>
      </form>

      <a href="/tools/<%= tool._id %>" class="btn-ghost">
        Back to Tool
      </a>
    </div>

  </section>
</main>
