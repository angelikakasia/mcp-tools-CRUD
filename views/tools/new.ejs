<%- include('../layout') %>

<main class="container">
  <section class="tool-card">

    <h1>Add MCP Tool</h1>
    <p class="subtitle">
      Create a new tool and define its risk profile.
    </p>

    <form action="/tools" method="POST">

      <label for="name">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        required
      >

      <label for="description">Description</label>
      <textarea
        id="description"
        name="description"
        rows="4"
      ></textarea>

      <label for="platform">Platform</label>
      <input
        type="text"
        id="platform"
        name="platform"
        placeholder="GitHub, Cursor, FastMCP"
        required
      >

      <label for="tags">Tags (comma-separated)</label>
      <input
        type="text"
        id="tags"
        name="tags"
        placeholder="filesystem, read, high_privilege"
      >

      <label for="riskLevel">Risk Level</label>
      <select id="riskLevel" name="riskLevel" required>
        <option>Low</option>
        <option>Medium</option>
        <option>High</option>
      </select>

      <div class="form-actions">
        <button type="submit" class="btn-primary">
          Add Tool
        </button>
        <a href="/tools" class="btn-ghost">
          Cancel
        </a>
      </div>

    </form>

  </section>
</main>
