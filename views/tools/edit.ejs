<%- include('../layout') %>

<h1>Edit Tool</h1>

<form action="/tools/<%= tool._id %>?_method=PUT" method="POST">

  <label>Name</label>
  <input type="text" name="name" value="<%= tool.name %>" required>

  <label>Platform</label>
  <input type="text" name="platform" value="<%= tool.platform %>" required>

  <label>Risk Level</label>
  <select name="riskLevel">
    <option <%= tool.riskLevel === "Low" ? "selected" : "" %>>Low</option>
    <option <%= tool.riskLevel === "Medium" ? "selected" : "" %>>Medium</option>
    <option <%= tool.riskLevel === "High" ? "selected" : "" %>>High</option>
  </select>

  <label>Description</label>
  <textarea name="description"><%= tool.description %></textarea>

  <label>Tags</label>
  <input type="text" name="tags" value="<%= tool.tags.join(', ') %>">

  <button type="submit">Update Tool</button>
</form>

<a href="/tools/<%= tool._id %>">Cancel</a>
