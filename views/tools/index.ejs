<%- include('../layout') %>

<h1>My MCP Tools</h1>

<a href="/tools/new" class="btn">Add New Tool</a>

<% if (tools.length === 0) { %>
  <p>You have no tools yet.</p>
<% } %>

<% tools.forEach(tool => { %>
  <div class="tool-card">
    <h3><a href="/tools/<%= tool._id %>"><%= tool.name %></a></h3>

    <p><strong>Platform:</strong> <%= tool.platform %></p>
    <p><strong>Risk:</strong> <%= tool.riskLevel %></p>

    <a href="/tools/<%= tool._id %>">View</a>
  </div>
<% }) %>
