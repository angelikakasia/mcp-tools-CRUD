<%- include('../layout') %>

<main class="container">

  <div class="section-header">
    <h1>My MCP Tools</h1>
    <a href="/tools/new" class="btn-primary">Add New Tool</a>
  </div>

  <% if (tools.length === 0) { %>
    <p class="empty-state">
      You have no tools yet. Click “Add New Tool” to get started.
    </p>
  <% } else { %>
    <div class="tool-grid">
      <% tools.forEach(tool => { %>
        <div class="tool-card">

          <h3>
            <a href="/tools/<%= tool._id %>">
              <%= tool.name %>
            </a>
          </h3>

          <p><strong>Platform:</strong> <%= tool.platform %></p>

          <p>
            <strong>Risk:</strong>
            <span class="severity-<%= tool.riskLevel.toLowerCase() %>">
              <%= tool.riskLevel %>
            </span>
          </p>

          <a href="/tools/<%= tool._id %>" class="btn-secondary">
            View Details
          </a>

        </div>
      <% }) %>
    </div>
  <% } %>

</main>
