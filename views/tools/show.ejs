<%- include('../layout') %>

<h1><%= tool.name %></h1>

<p><strong>Description:</strong> <%= tool.description %></p>
<p><strong>Platform:</strong> <%= tool.platform %></p>
<p><strong>Risk Level:</strong> <%= tool.riskLevel %></p>
<p><strong>Tags:</strong> <%= tool.tags.join(', ') %></p>

<a href="/tools/<%= tool._id %>/edit">Edit Tool</a>

<form action="/tools/<%= tool._id %>?_method=DELETE" method="POST">
  <button type="submit">Delete Tool</button>
</form>

<hr>

<h2>Diagnostics</h2>

<a href="/diagnostics/<%= tool._id %>/new">Add Diagnostic</a>

<ul>
  <% tool.diagnostics.forEach(diag => { %>
    <li>
      <strong><%= diag.severity %></strong> â€” <%= diag.note %>
      <a href="/diagnostics/<%= tool._id %>/<%= diag._id %>/edit">Edit</a>

      <form action="/diagnostics/<%= tool._id %>/<%= diag._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }) %>
</ul>

<a href="/tools">Back to Tools</a>
